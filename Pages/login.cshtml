@page
@model prueba.Pages.loginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOGIN</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

</head>
<body>

    <script src="~/lib/code.jquery.com_jquery-3.6.0.min.js"></script>
    <script src="~/login/js/login.js?v=0.0.02"></script>
    <script src="~/config.js"></script>

    <section class="left-form"></section>

    <section class="right-form">
        <form>
            <h2>EcoGreen S.A</h2>
            <label for="usuario">Email:</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" id="input_user_email" required>
            </div>
            <label for="password">Password</label>
            <div class="input-group">
                <input type="password" class="form-control" aria-label="Username" aria-describedby="basic-addon1" id="input_user_password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <button id="btn-show-password-usuario" class="btn btn-show-password" type="button">
                            <span style="font-size:20px; display:flex" class="material-symbols-outlined">
                                visibility
                            </span>
                        </button>
                    </div>
                </div>
            </div>

            <button id="login" class="btn btn-success" type="button" onclick="IniciarSesion()"> Iniciar Sesion </button>
        </form>
    </section>

</body>
</html>
