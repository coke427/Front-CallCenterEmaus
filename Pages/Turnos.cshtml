@page
@model Emaús.Pages.TurnosModel
@{
    ViewData["Title"] = "Emaús";
}
<!DOCTYPE html>
<html lang="es">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emaús</title>

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/turno.css">
    <link rel="shortcut icon" href="favicon.jpg" type="image/jpeg" />

</head>

<body>

    <script src="~/login/js/validateSesion.js"></script>

    <!-- Contenido -->
    <main class="container-fluid p-0">
        <div class="row g-0">
            <!-- Columna izquierda -->
            <div class="col-lg-6 d-flex flex-column p-4 overflow-auto">
                <div class="border-bottom mb-3">
                    <h2 class="h2" style="font-size:1.5rem">Turnos</h2>
                </div>

                <div class="mb-3">
                    <button type="button" id="new_turno" class="btn btn-success me-2" onClick="modalNewTurno()"><span class="material-symbols-outlined">add</span></button>
                    <button type="button" id="refresh" class="btn btn-success" onClick="window.location.reload()">
                        <span class="material-symbols-outlined">sync</span>
                    </button>
                </div>

                <div class="table-responsive flex-grow-1">
                    <table class="table table-sm custom-table" id="table_turno">
                        <thead style="color: white;">
                            <tr>
                                <th>Turno</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tb_solicitudes"></tbody>
                    </table>
                </div>
            </div>

@*             <!-- Columna derecha: imagen -->
            <div class="col-lg-6 d-none d-lg-block">
                <img src="~/img/ticket.jpg" class="img-fluid" style="max-height: 100vh; width: 100%; object-fit: cover;" alt="Imagen de turno">
            </div> *@
        </div>
    </main>

    <!-- JS Personalizado -->
    <script type="text/javascript" src="~/lib/jquery-3.6.0/jquery-3.6.0.min.js"></script>

    <!-- JS Personalizado -->
    <script src="~/config.js"></script>
    <script src="~/js/turno.js?v=0.0.02"></script>

    <!-- Modal agregar turno -->
    <div class="modal" id="modal_agregar_turno" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Agregar turno</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">

                            <form onsubmit="return guardarNewTurno()">

                                <!-- Nombres -->
                                <div class="input-group input-group-sm mb-3">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
                                    <input type="text" class="form-control" id="input_turno_nombre" required autocomplete="off">
                                </div>

                                <button id="boton_new_turno" class="btn btn-sm btn-success ml-auto" type="submit">Guardar</button>

                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal editar contribuyente -->
    <div class="modal" id="modal_editar_turno" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Editar turno</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">

                            <!-- Nombre -->
                            <div class="input-group input-group-sm mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
                                <input type="text" class="form-control" id="edit_turno_nombre" required autocomplete="off">
                            </div>

                            <button id="boton_edit_turno" class="btn btn-sm btn-success ml-auto" type="submit">Actualizar</button>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>